<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/widget_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@color/bgcolor"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="@dimen/small_margin"
            android:paddingTop="@dimen/medium_margin"
            android:background="@color/bgcolormain"
            android:orientation="vertical">

            <TextView
                android:id="@+id/battery_text"
                style="@style/CustomBaseTextView"
                android:textColor="@android:color/white"
                />

            <TextView
                style="@style/CustomBaseTextView"
                android:gravity="center"
                android:drawableTop="@drawable/ic_battery_charging_full_white_24dp"
                android:textColor="@color/white"
                android:paddingBottom="@dimen/small_margin"
                android:paddingTop="@dimen/small_margin"
                android:drawablePadding="@dimen/small_margin"
                android:text="Battery Charge"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="@dimen/small_margin"
            android:paddingTop="@dimen/medium_margin"
            android:background="@color/bgcolormain"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ram_text"
                style="@style/CustomBaseTextView"
                android:textColor="@android:color/white"
                />

            <TextView
                style="@style/CustomBaseTextView"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="RAM Usage"
                android:paddingBottom="@dimen/small_margin"
                android:paddingTop="@dimen/small_margin"
                android:drawableTop="@drawable/ic_memory_white_24dp"
                android:drawablePadding="@dimen/small_margin"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>